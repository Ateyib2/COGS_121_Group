		<script type="text/javascript">
      $(document).ready(() => {
        $.ajax({
          url: '/users/John',
          type: 'get',
          dataType: 'json',
          success: (data) => {
						data.goals.forEach((g) => {
							console.log(g);
							$("#goalsList").append('<li class="collection-item">'+ g +'</li>');
						});
          },
        });
      });
    </script>
	</body>
